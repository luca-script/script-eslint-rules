{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "lib": ["ES2021"],
        "module": "Preserve",
        "moduleResolution": "Bundler",
        "noImplicitReturns": true,
        "pretty": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2021"
    }
}
